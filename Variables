# Definición de variables
libro_favorito = "El plan de tu alma"
print(libro_favorito)


# definir múltiples variables en una sola línea
nombre_completo, edad, estado_civil = "Maritza De Castro", 37, "Soltera"
print(nombre_completo, edad, estado_civil)
print(nombre_completo)
print(edad)
print(estado_civil)


# definir único valor para diferentes variables
apellido_1 = apellido_2 = apellido_3 = "De Castro"
print(apellido_1)
print(apellido_2)
print(apellido_3)
print(apellido_1, apellido_2, apellido_3)


# Tipo de variables
nombre = "Giacomo" # cadena o string
edad = 39 # entero o int
peso = 70.3 # flotante o float
soltero = True # boleano o boolean

# Función type: nos dice el tipo de datos
print(type(nombre))
print(type(edad))
print(type(peso))
print(type(soltero))


# Concatenacion de variables
nombre = "Maritza "
apellido = "De Castro"
print(nombre + apellido) # solo podemos concatenar cadenas, no es posible cadena+entero

# otro forma de concatenar
nombre = "Giacomo "
apellido = "Colombo"
nombre_completo = nombre+apellido
print(nombre_completo)

# otro ejemplo de concatenación
nombre = "Ana"
nombre_completo = nombre+"Gonzalez"
print("El nombre es: " +nombre_completo)


# convertir variables

# convertir número entero y flotante a cadena
numero_entero = 7
numero_flotante = 10.5
print("El numero entero es: " +str(numero_entero))
print("El numero flotante es: " +str(numero_flotante))

# otra forma de convertir número a cadena
numero_entero = 7
numero_entero = str(numero_entero) # reescribimos el valor de la variable
print("El numero entero es: " +numero_entero)

# otra forma de convertir número a cadena, usando f-string
numero_entero = 10
print(f"El numero entero es: {numero_entero}")

# convertir a mayúscula
nombre = "Maritza"
print(nombre.upper())

# convertir a minuscula
apellido = "Suzano"
print(apellido.lower())

# otra forma de convetir a minúscula
apellido = "DE Castro"
apellido = apellido.lower()
print(apellido)

#swapcase, lo que está en mayúscula pasa a minúscula y lo que está en minúscula pasa a mayúscula
nombre_apellido = "maritza DE CASTRO"
print(nombre_apellido.swapcase())
